---
const { offre } = Astro.props;
console.log(offre.favori);
import PbImage from "./PbImage.astro";
---

<div
    class="offer-card w-80 overflow-hidden rounded-2xl bg-white ring-1 ring-slate-200
         shadow-sm transition-all duration-200
         hover:-translate-y-1 hover:shadow-lg hover:ring-slate-300
         cursor-pointer"
    data-favori={offre.favori.toString()}
>
    <div class="h-48 w-full overflow-hidden bg-slate-100">
        <PbImage
            record={offre}
            recordImage={offre.images[0]}
            class="h-full w-full object-cover"
        />
    </div>

    <h3 class="p-4 text-base font-semibold text-slate-900 truncate">
        {offre.nom_maison}
    </h3>

    <style>
        .offer-card :global(img) {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }
    </style>
</div>
