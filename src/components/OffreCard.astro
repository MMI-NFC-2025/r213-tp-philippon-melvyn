---
const { offre } = Astro.props;
const { record, recordImage, width = 900, height = 400 } = Astro.props;
console.log(offre.favori);
import PbImage from "./PbImage.astro";
---

<div
    class="offer-card group h-full w-full overflow-hidden
         rounded-xl bg-white
         ring-1 ring-slate-200
         shadow-sm transition-all duration-300
         hover:shadow-xl hover:ring-slate-300
         cursor-pointer"
    data-favori={offre.favori.toString()}
>
    <div class="relative overflow-hidden bg-slate-200">
        <PbImage
            record={offre}
            recordImage={offre.images[0]}
            width={width}
            height={height}
            class="object-cover transition-transform duration-500 group-hover:scale-105"
        />

        <div
            class="pointer-events-none absolute inset-0
             bg-linear-to-t from-black/50 via-black/10 to-transparent"
        >
        </div>
    </div>

    <div class="flex h-20 items-center px-5">
        <h3
            class="text-lg font-semibold tracking-tight text-slate-900
             group-hover:text-blue-700 transition-colors truncate"
        >
            {offre.nom_maison}
        </h3>
    </div>
</div>
