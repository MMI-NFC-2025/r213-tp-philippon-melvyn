---
import { getImageUrl } from "../js/backend.mjs";
import { Image } from "astro:assets";

const {
    record,
    recordImage,
    width = 600, 
    height = 400, 
} = Astro.props;

const imageURL = await getImageUrl(record, recordImage);
---

{
    imageURL && (
        <Image
            src={imageURL}
            alt={record.nomMaison || "Image"}
            inferSize={true}
        />
    )
}
